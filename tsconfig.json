{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "node",

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noImplicitAny": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "types": ["@citizenfx/server", "@citizenfx/client"],

    "baseUrl": "./src",
    "paths": {
      "@opencore/server/*": ["server/*"],
      "@opencore/client/*": ["client/*"],
      "@opencore/utils/*": ["utils/*"],
      "@opencore/system/*": ["system/*"]
    },

    "noEmit": true
  },
  "include": ["src"],
  "exclude": ["dist"]
}
