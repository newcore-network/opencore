{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "node",

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noImplicitAny": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "baseUrl": ".",
    "paths": {
      "@open-core/framework": ["./src/kernel/index.ts"],
      "@open-core/framework/*": ["./src/*"],
      "@open-core/framework/client": ["./src/runtime/client"],
      "@open-core/framework/server": ["./src/runtime/server"]
    },

    "types": ["@citizenfx/server", "@citizenfx/client", "@types/node"],
    "noEmit": true
  },
  "include": ["src", "tests", "examples"],
  "exclude": ["dist"]
}
