{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "node",

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noImplicitAny": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "types": ["@citizenfx/server", "@citizenfx/client"],
    "noEmit": true
  },
  "include": ["src"],
  "exclude": ["dist"]
}
